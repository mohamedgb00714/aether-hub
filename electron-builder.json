{
  "appId": "com.aethermsaid.hub",
  "productName": "aethermsaid hub",
  "copyright": "Copyright Â© 2026 aethermsaid hub",
  "asar": true,
  "asarUnpack": [
    "browser-addon/**/*"
  ],
  "extraResources": [
    {
      "from": "build/icons/icon.png",
      "to": "icons/icon.png"
    }
  ],
  "npmRebuild": true,
  "nodeGypRebuild": false,
  "buildDependenciesFromSource": false,
  "directories": {
    "output": "release/${version}",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "browser-addon/**/*",
    "package.json"
  ],
  "publish": {
    "provider": "github",
    "owner": "mohamedgb00714",
    "repo": "aether-hub"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icons/icon.ico",
    "artifactName": "${productName}-${version}-${arch}-setup.${ext}",
    "publisherName": "msaid mohamed el hadi"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "aethermsaid hub"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "build/icons/icon.icns",
    "category": "public.app-category.productivity",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist"
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "window": {
      "width": 540,
      "height": 380
    }
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "icon": "build/icons",
    "category": "Office;Productivity",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "synopsis": "AI-powered personal productivity hub",
    "description": "aethermsaid hub brings together your emails, calendar, and knowledge in one intelligent interface."
  },
  "protocols": [
    {
      "name": "aethermsaid hub Protocol",
      "schemes": ["aethermsaid"]
    }
  ],
  "fileAssociations": [
    {
      "ext": "aether",
      "name": "aethermsaid hub Knowledge Base",
      "role": "Editor"
    }
  ]
}
